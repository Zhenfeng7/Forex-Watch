# =============================================================================
# FOREX-WATCH ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# =============================================================================
# DATABASE
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/forex-watch-dev
# For MongoDB Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>

# =============================================================================
# JWT & AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# EMAIL & NOTIFICATIONS
# =============================================================================
# AWS SES Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
SES_FROM_EMAIL=noreply@yourdomain.com
SES_FROM_NAME=Forex Watch

# SMTP Configuration (alternative to SES)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email provider choice: 'ses' | 'smtp' | 'mock'
EMAIL_PROVIDER=mock

# =============================================================================
# FOREX RATE PROVIDER
# =============================================================================
# Rate provider choice: 'mock' | 'exchangerate-api' | 'currencylayer'
RATE_PROVIDER=mock

# ExchangeRate-API (https://exchangerate-api.com/)
EXCHANGERATE_API_KEY=your-api-key
EXCHANGERATE_API_BASE_URL=https://v6.exchangerate-api.com

# Freecurrencyapi (https://freecurrencyapi.com/)
FREECURRENCYAPI_KEY=your-api-key
FREECURRENCYAPI_BASE_URL=https://api.freecurrencyapi.com

# CurrencyLayer API (https://currencylayer.com/)
CURRENCYLAYER_API_KEY=your-api-key

# Provider client behavior
RATE_PROVIDER_TIMEOUT_MS=5000
RATE_PROVIDER_RETRY_COUNT=1

# Rates refresh schedule and cache
# Pairs are CSV in BASE:QUOTE format
RATE_PAIRS=USD:JPY
RATE_FETCH_INTERVAL_MINUTES=30
# Active window to stay within free tier (JST 07:00-19:00 by default)
RATE_ACTIVE_START_HOUR=7
RATE_ACTIVE_END_HOUR=19
RATE_ACTIVE_TIMEZONE=Asia/Tokyo
# Cache TTL for latest rates (ms). Should be >= fetch interval.
RATE_CACHE_TTL_MS=2700000

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
LOG_LEVEL=debug
# For production, use: LOG_LEVEL=info

# Test database (for integration tests)
TEST_MONGODB_URI=mongodb://localhost:27017/forex-watch-test
